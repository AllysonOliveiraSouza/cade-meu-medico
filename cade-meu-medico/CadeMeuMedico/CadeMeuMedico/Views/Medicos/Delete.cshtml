@model CadeMeuMedico.Models.Medicos

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Tem certeza que deseja excluir o médico @Model.Nome ?</h3>
<div>
    <h4>Medicos</h4>
    <hr />
    
    <form asp-action="Delete">
        <input type="submit" value="Sim" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-action="Index">Não</a>
    </form>
</div>
